---
import { getCollection } from "astro:content";
import MainLayout from "../../layouts/main.astro";

export async function getStaticPaths() {
  const blogEntries = await getCollection("blog");
  return blogEntries.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content, remarkPluginFrontmatter } = await post.render();
---

<MainLayout
  title={post.data.title}
  description={post.data.description ?? "A blog post."}
  image={"https://toasted.is-a.dev" + post.data.image}
>
  {
    post.data.image && (
      <>
        <img
          src={post.data.image}
          alt={post.data.title}
          class="h-[240px] w-full rounded-lg object-cover"
        />
        <div class="p-2" />
      </>
    )
  }
  <div class="flex flex-col gap-4 pb-2">
    <h1 class="text-4xl font-bold">
      {post.data.title}
    </h1>
    <div class="flex items-center gap-2">
      <img
        src="/toasted.jpg"
        alt="ToastedToast"
        width={48}
        height={48}
        class="rounded-full"
      />
      <div>
        <p class="text-lg font-semibold">ToastedToast</p>
        <div class="flex items-center gap-1.5 text-sm text-gray-300">
          <time datetime={post.data.createdAt.toLocaleDateString()}>
            {
              post.data.createdAt.toLocaleString(undefined, {
                month: "short",
                day: "numeric",
                year: "numeric",
              })
            }
          </time>
          <p>Â·</p>
          <p>{remarkPluginFrontmatter.minutesRead}</p>
        </div>
      </div>
    </div>
  </div>
  <article
    class="prose prose-neutral prose-invert max-w-none prose-headings:mb-3 prose-headings:mt-6 prose-a:text-orange-500 prose-a:no-underline"
  >
    <Content />
  </article>
</MainLayout>
